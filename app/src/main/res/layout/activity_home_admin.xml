<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home_Admin">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20sp"
        android:textSize="30sp"
        android:text="Home Admin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/adminhotel"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            tools:srcCompat="@drawable/hoteladmin" />

        <ImageView
            android:id="@+id/adminroom"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            tools:srcCompat="@drawable/roomadmin" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="25sp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:gravity="center"
            android:text="Khách sạn" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:gravity="center"
            android:text="Phòng" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/manageAccount"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            tools:srcCompat="@drawable/useradmin" />

        <ImageView
            android:id="@+id/adminbooking"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            tools:srcCompat="@drawable/bookadmin" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15sp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:gravity="center"
            android:text="Tài khoản" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:gravity="center"
            android:text="Đặt khách sạn" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/adminpayment"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            tools:srcCompat="@drawable/credit_card" />

        <Button
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginTop="50dp"
            android:text="Đăng xuất"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="center"
            android:text="Thanh Toán"/>
    </LinearLayout>

</LinearLayout>